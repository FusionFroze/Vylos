generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  onboarded    Boolean    @default(false)

  macros       Macro[]
  settings     Settings?
  voiceLogs    VoiceLog[]
  notes        Note[]     
}

model Macro {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  name        String
  trigger     String   
  description String?
  
  // FIX: SQLite doesn't support Json, so we use String
  actions     String   
  
  createdAt   DateTime @default(now())
}

model Settings {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       Int      @unique
  fontSize     Int      @default(16)
  highContrast Boolean  @default(false)
  darkMode     Boolean  @default(false)
  ttsRate      Float    @default(1.0)
  ttsPitch     Float    @default(1.0)
  ttsLang      String   @default("en-US")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VoiceLog {
  id           Int      @id @default(autoincrement())
  user         User?    @relation(fields: [userId], references: [id])
  userId       Int?
  commandText  String
  recognizedAt DateTime @default(now())
  result       String?  
}

model Note {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  title     String?  
  content   String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}